            <audiences>
                <audience>api://50d72824-0274-4e4d-a194-3504ee2e321e</audience>
            </audiences>
            <required-claims>
                <claim name="roles" match="any">
                    <value>StarWars</value>
                </claim>
            </required-claims>
        </validate-jwt>
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />
        <!-- Store all responses as cached elements for 10 minutes -->
        <cache-store duration="600" />
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>